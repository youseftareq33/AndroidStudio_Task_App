<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title: "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/v_TaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task 1"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/v_EditTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description: "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/v_TaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="some describtion"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/v_EditTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Status: "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/v_TaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="Due"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Due to: "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/v_TaskDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="2023 / July / 24"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textAt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="At"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/v_TaskTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="12:55 AM"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/EditDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/LLEditDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/EditSpinnerYear"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="month:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/EditSpinnerMonth"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="day:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/EditSpinnerDay"
            android:layout_width="85dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/EditTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/LLEditTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hours:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/EditSpinnerHours"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="minutes:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/EditSpinnerMinutes"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/EditSpinnerDayNight"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="35dp"
        android:text="Edit"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonConfirmEdits"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        android:text="Confirm Edit"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonCancelEdits"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="14dp"
        android:text="Cancel Edit"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonCompleteTask"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="14dp"
        android:text="Complete Task"
        android:textSize="18dp"
        android:textStyle="bold"/>

</LinearLayout>